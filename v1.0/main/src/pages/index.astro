    <section class="bg-secondary 28 py-32 px-6 text-white flex items-center justify-center">
        <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 w-full max-w-screen-xl lg:grid-cols-3">
            <aside class="flex flex-col gap-5">
                <img src="/logo_rand.png" alt="" class="w-fit">
                <!-- Contact -->
                <div class="mt-5">
                    <h3 class="uppercase font-semibold text-sm text-primary">Contacto</h3>
