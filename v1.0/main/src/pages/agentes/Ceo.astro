---
import LayoutDT from "@layouts/LayoutDT.astro";
---

<LayoutDT title="Rand | CEO">    
    <main class="fixed inset-0 flex items-center justify-center bg-secondary">
        <div class="w-full max-w-[420px] mx-auto px-6">
            <article class="bg-white rounded-2xl relative">
                <header class="w-full flex items-center justify-center flex-col relative">
                    <img 
                        src="/bg_digital_card.png" 
                        class="w-full h-[165px] object-cover rounded-tl-2xl rounded-tr-2xl" 
                        alt=""
                    >
                    <div class="absolute bottom-[-4.5em] bg-white p-1.5 rounded-full">
                        <img 
                            src="/lic_Luna.webp" 
                            class="w-[130px] h-[130px] object-cover" 
                            alt=""
                        >
                    </div>
                </header>

                <div class="pt-[4.5rem] pb-2 px-6 flex flex-col gap-5">
                    <div class="text-center">
                        <h1 class="font-bold text-secondary text-lg">Lic. Josué Alejandro Luna Monroy</h1>
                        <p class="font-semibold text-sm text-[#49494D]">CEO</p>
                    </div>

                    <div class="flex flex-col gap-3">
                        <div class="flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2e3140" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-mail">
