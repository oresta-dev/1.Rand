                                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
                            </svg>
                            <p class="font-semibold text-[13px]">rand.com.mx</p>
                        </div>

                        <div class="flex items-center gap-2">
                            <div class="min-w-[24px] min-h-[24px]">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#2e3140" class="icon icon-tabler icons-tabler-filled icon-tabler-map-pin">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
